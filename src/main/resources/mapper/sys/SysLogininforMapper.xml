<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lisuiheng.astra.sys.mapper.SysLogininforMapper">

    <resultMap id="SysLogininforResult" type="com.github.lisuiheng.astra.sys.domain.entity.SysLogininfor">
        <id property="infoId" column="info_id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="userName" column="user_name"/>
        <result property="clientKey" column="client_key"/>
        <result property="deviceType" column="device_type"/>
        <result property="ipaddr" column="ipaddr"/>
        <result property="loginLocation" column="login_location"/>
        <result property="browser" column="browser"/>
        <result property="os" column="os"/>
        <result property="status" column="status"/>
        <result property="msg" column="msg"/>
        <result property="loginTime" column="login_time"/>
    </resultMap>

    <resultMap id="SysLogininforVoResult" type="com.github.lisuiheng.astra.sys.domain.vo.SysLogininforVo" extends="SysLogininforResult">
    </resultMap>

    <select id="selectLogininforList" parameterType="com.github.lisuiheng.astra.sys.domain.bo.SysLogininforBo"
            resultMap="SysLogininforResult">
        SELECT info_id,
               tenant_id,
               user_name,
               client_key,
               device_type,
               ipaddr,
               login_location,
               browser,
               os,
               status,
               msg,
               login_time
        FROM sys_logininfor
        WHERE 1=1
        <if test="logininforBo.tenantId != null and logininforBo.tenantId != ''">
            AND tenant_id = #{logininforBo.tenantId}
        </if>
        <if test="logininforBo.ipaddr != null and logininforBo.ipaddr != ''">
            AND ipaddr LIKE CONCAT('%', #{logininforBo.ipaddr}, '%')
        </if>
        <if test="logininforBo.status != null and logininforBo.status != ''">
            AND status = #{logininforBo.status}
        </if>
        <if test="logininforBo.userName != null and logininforBo.userName != ''">
            AND user_name LIKE CONCAT('%', #{logininforBo.userName}, '%')
        </if>
        <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
            AND login_time &gt;= #{params.beginTime}
        </if>
        <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
            AND login_time &lt;= #{params.endTime}
        </if>
        ORDER BY login_time DESC
    </select>

    <select id="selectVoList" parameterType="com.github.lisuiheng.astra.sys.domain.bo.SysLogininforBo"
            resultMap="SysLogininforVoResult">
        SELECT info_id,
               tenant_id,
               user_name,
               client_key,
               device_type,
               ipaddr,
               login_location,
               browser,
               os,
               status,
               msg,
               login_time
        FROM sys_logininfor
        WHERE 1=1
        <if test="wrapper.entity.ipaddr != null and wrapper.entity.ipaddr != ''">
            AND ipaddr LIKE CONCAT('%', #{wrapper.entity.ipaddr}, '%')
        </if>
        <if test="wrapper.entity.status != null and wrapper.entity.status != ''">
            AND status = #{wrapper.entity.status}
        </if>
        <if test="wrapper.entity.userName != null and wrapper.entity.userName != ''">
            AND user_name LIKE CONCAT('%', #{wrapper.entity.userName}, '%')
        </if>
        <if test="wrapper.params.beginTime != null and wrapper.params.beginTime != ''"><!-- 开始时间检索 -->
            AND login_time &gt;= #{wrapper.params.beginTime}
        </if>
        <if test="wrapper.params.endTime != null and wrapper.params.endTime != ''"><!-- 结束时间检索 -->
            AND login_time &lt;= #{wrapper.params.endTime}
        </if>
        ORDER BY info_id DESC
    </select>

    <select id="selectVoPage" resultMap="SysLogininforVoResult">
        SELECT info_id,
               tenant_id,
               user_name,
               client_key,
               device_type,
               ipaddr,
               login_location,
               browser,
               os,
               status,
               msg,
               login_time
        FROM sys_logininfor
        WHERE 1=1
        <if test="ew != null and ew.nonEmptyOfWhere">
            AND ${ew.sqlSegment}
        </if>
        ORDER BY info_id DESC
    </select>

    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM sys_logininfor WHERE info_id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="cleanLogininfor">
        DELETE FROM sys_logininfor
    </delete>

</mapper>