<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.lisuiheng.astra.sys.mapper.SysRoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="SysRoleMenuResultMap" type="com.github.lisuiheng.astra.sys.domain.entity.SysRoleMenu">
        <result property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>

    <!-- 批量新增角色菜单信息 -->
    <insert id="batchRoleMenu">
        INSERT INTO sys_role_menu(role_id, menu_id) VALUES
        <foreach collection="roleMenuList" item="item" separator=",">
            (#{item.roleId}, #{item.menuId})
        </foreach>
    </insert>

    <!-- 批量删除角色菜单关联信息 -->
    <delete id="deleteRoleMenuByRoleIds" parameterType="java.util.List">
        DELETE FROM sys_role_menu WHERE role_id IN
        <foreach collection="roleIds" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

    <!-- 查询菜单使用数量 -->
    <select id="checkMenuExistRole" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM sys_role_menu WHERE menu_id IN
        <foreach collection="menuIds" item="menuId" open="(" separator="," close=")">
            #{menuId}
        </foreach>
    </select>

</mapper>